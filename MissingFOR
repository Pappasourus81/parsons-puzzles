    bank: ["FOR","i","=","1","4","2","*","/","+","INPUT","OUTPUT","value","NEXT"]
  },
  {
    title: "Output only even numbers",
    bullets: [
      "Input: prompt the user 4 times for a number.",
      "Output the number only if it is even (divisible by 2)."
    ],
