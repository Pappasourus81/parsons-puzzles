      "INPUT ___2___",
      "___3___ ___4___ ___5___ ___6___ ___7___",
      "Total = Total + ___8___",
      "INPUT ___9___",
      "___10___",
      "OUTPUT \"The total is \", Total"
    ],
    answers: ["0","Number","WHILE","Number",">","0","DO","Number","Number","ENDWHILE"],
    bank: ["WHILE","ENDWHILE","INPUT","OUTPUT","Total","Number","0",">","<","=","DO","+","\"The total is \""]
