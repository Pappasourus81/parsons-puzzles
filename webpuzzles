      animation: swapFlash 280ms ease;
    }
    @keyframes swapFlash {
      0% { transform: translateY(0) scale(1); }
      25% { transform: translateY(-6px) scale(1.02); }
      60% { transform: translateY(2px) scale(.995); }
      100% { transform: translateY(0) scale(1); }
